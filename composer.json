{
    "name": "fuliang/php-tools",
    "description": "php开发辅助类以及函数",
    "type": "composer-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "LingZi",
            "email": "idevjdgittyucidvdinoper007@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-gd": "*",
        "ext-mbstring": "*",
        "composer-plugin-api": "^1.0"
    },
    "require-dev": {
        "composer/composer": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Fuliang\\PhpTools\\": "src/"
        },
        "files": [
            "src/functions.php",
            "src/constants.php"
        ]
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        },
        "class": "Fuliang\\PhpTools\\Plugins\\ComposerPlugin"
    }
}
